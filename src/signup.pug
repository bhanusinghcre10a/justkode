extends base2

block content
    main.main
        .signup-form
            h2.heading-secondary Log into your account
            .flot-left
                .left-login
                .signup 
                    a.button-text.signup-link(href="/api/v1/login") login
            .float-right
                form.form
                        .form__group
                            label.form__label(for='name') name
                            input.form__input(type='text' id='name', placeholder='you', required)
                        .form__group
                            label.form__label(for='email') Email address
                            input.form__input(type='email' id='email', placeholder='you@example.com', required)
                        .form__group
                            label.form__label(for='password') Password
                            input.form__input(type='password' id='password', placeholder='••••••••', required, minlength='8')
                        .form__group
                            label.form__label(for='passwordmatch') Password repeat
                            input.form__input(type='password' id='passwordmatch', placeholder='••••••••', required, minlength='8')
                        button.btn.btn--green signup